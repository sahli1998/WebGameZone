@model Game
@{
    ViewData["Title"]
    = Model.Name;
}


<div class="card border-success rounded-3 mt-5 ">
   <div class="card-body overflow-hidden" style="padding:0;" >
        <div class="row">
            <div class="col-md-8 p-4  d-flex flex-column justify-content-between">
               
                   <div>
                       <h1 class="text-success fw-bolder mb-3">@Model.Name</h1>
                       <span class="badge bg-info fs-5 mb-3">@Model.Category.Name</span>
                        <p class="fw-italic">@Model.Description</p>
                   </div>
                   <div class="justify-content-end">
                        @foreach(var deviceGame in Model.Device)
                        {
                            <i class="@deviceGame.Device.Icon text-secondary fs-3"></i>
                        }
                        

                   </div>
              
            </div>
            <div class="col-md-4">
                <img src="@($"{SettingFile.pathImage}/{Model.icon}")"  alt="@Model.Name" class="w-100 rounded-end-3" />
            </div>

        </div>
   </div>

</div>
